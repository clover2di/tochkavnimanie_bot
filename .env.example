# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Admin Panel
# Secret key for session encryption (generate random string 32+ chars)
ADMIN_SECRET_KEY=your-random-secret-key-here-32chars
ADMIN_USERNAME=admin
# Option 1: Plain text password (simple, less secure)
ADMIN_PASSWORD=change_this_password
# Option 2: Bcrypt hash (more secure)
# Generate with: python -c "import bcrypt; print(bcrypt.hashpw(b'YOUR_PASSWORD', bcrypt.gensalt()).decode())"
# ADMIN_PASSWORD_HASH=$2b$12$...your_hash_here...

# Database
DATABASE_URL=sqlite+aiosqlite:///./database/bot.db

# File Storage
UPLOADS_DIR=uploads

# Settings
MAX_FILE_SIZE_MB=20
DEBUG=False
